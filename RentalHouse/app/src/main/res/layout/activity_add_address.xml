<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f8"
              android:orientation="vertical">

    <include
        layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_select_address"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="所在区域"
                    android:textColor="@color/gray_55"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_select_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择区域"
                    android:singleLine="true"
                    android:textColor="@color/gray_22"
                    android:textColorHint="@color/gray_88"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/ic_next"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_ee"/>

            <LinearLayout
                android:id="@+id/ll_building_type"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="建筑类型"
                    android:textColor="@color/gray_55"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_select_building_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择建筑类型"
                    android:singleLine="true"
                    android:textColor="@color/gray_22"
                    android:textColorHint="@color/gray_88"
                    android:textSize="14sp"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_ee"/>


            <LinearLayout
                android:id="@+id/ll_area_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="小区名称"
                    android:textColor="@color/gray_55"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_area_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入小区名称"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/gray_22"
                    android:textColorHint="@color/gray_88"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:id="@+id/view_area_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_ee"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="路巷门牌号"
                    android:textColor="@color/gray_55"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_area_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入路巷门牌号"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/gray_22"
                    android:textColorHint="@color/gray_88"
                    android:textSize="14sp"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_ee"/>

            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="定位"
                    android:textColor="@color/gray_55"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/gray_22"
                    android:textColorHint="@color/gray_88"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:src="@mipmap/ic_gps"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/ic_next"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_ee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="辖区派出所"
                    android:textColor="@color/gray_55"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_police_station"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/gray_22"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/gray_f8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:text="建筑物外景(最多3张)"
                android:textColor="@color/gray_55"
                android:textSize="14sp"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_add_picture"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="14dp">
            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:background="@color/gray_f8"/>

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/btn_add_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_submit"
        android:enabled="false"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>


</LinearLayout>