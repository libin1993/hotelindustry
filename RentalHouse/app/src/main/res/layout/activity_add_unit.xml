<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f8"
              android:orientation="vertical">

    <include
        layout="@layout/layout_title"/>

    <LinearLayout
        android:id="@+id/ll_type1"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/gray_f8"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ring_checked"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="方式一：手动创建"
            android:textColor="@color/gray_22"
            android:textSize="15sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_house_no"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="*楼幢号"
                android:textColor="@color/tv_title_color"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_house_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:hint="请输入楼幢号"
                android:maxLength="10"
                android:singleLine="true"
                android:digits="@string/number"
                android:textColor="@color/et_text_color"
                android:textColorHint="@color/et_hint_color"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/gray_ee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unit_no"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="单元号"
                android:textColor="@color/tv_title_color"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_unit_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:hint="请输入单元号"
                android:maxLength="10"
                android:singleLine="true"
                android:digits="@string/number"
                android:textColor="@color/et_text_color"
                android:textColorHint="@color/et_hint_color"
                android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_type2"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/gray_f8"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ring_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="方式二：自动创建"
            android:textColor="@color/gray_22"
            android:textSize="15sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_house_range"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:enabled="false"
                android:text="*楼幢号区间"
                android:textColor="@color/tv_title_color"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_start_house_no"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:hint="开始区间"
                android:digits="@string/phone_number"
                android:maxLength="3"
                android:singleLine="true"
                android:textColor="@color/et_text_color"
                android:textColorHint="@color/et_hint_color"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="-"
                android:textColor="@color/gray_22"/>

            <EditText
                android:id="@+id/et_end_house_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:enabled="false"
                android:hint="结束区间"
                android:digits="@string/phone_number"
                android:maxLength="3"
                android:singleLine="true"
                android:textColor="@color/et_text_color"
                android:textColorHint="@color/et_hint_color"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/gray_ee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unit_range"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:enabled="false"
                android:text="单元号区间"
                android:textColor="@color/tv_title_color"
                android:textSize="14sp"/>


            <EditText
                android:id="@+id/et_start_unit_no"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:hint="开始区间"
                android:digits="12345"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/et_text_color"
                android:textColorHint="@color/et_hint_color"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="-"
                android:textColor="@color/gray_22"/>

            <EditText
                android:id="@+id/et_end_unit_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:enabled="false"
                android:hint="结束区间"
                android:digits="12345"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/et_text_color"
                android:textColorHint="@color/et_hint_color"
                android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>