<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f8"
              android:orientation="vertical">

    <include
        layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="旧密码"
                android:textColor="@color/gray_55"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/password"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:hint="请输入旧密码"
                android:maxLength="12"
                android:singleLine="true"
                android:textColor="@color/gray_22"
                android:textColorHint="@color/gray_88"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/cb_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/cb_status"
                android:padding="12dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/gray_ee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="新密码"
                android:textColor="@color/gray_55"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/password"
                android:gravity="center_vertical"
                android:hint="6-16位数字或字母组合"
                android:inputType="textPassword"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/gray_22"
                android:textColorHint="@color/gray_88"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/cb_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/cb_status"
                android:padding="12dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/gray_ee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="确认密码"
                android:textColor="@color/gray_55"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_confirm_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="textPassword"
                android:digits="@string/password"
                android:gravity="center_vertical"
                android:hint="请再次输入新密码"
                android:maxLength="12"
                android:singleLine="true"
                android:textColor="@color/gray_22"
                android:textColorHint="@color/gray_88"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/cb_confirm_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/cb_status"
                android:padding="12dp"/>
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_update_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_submit"
        android:enabled="false"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>


</LinearLayout>