<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_null_room"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="center"
        android:text="如有多个房间分租时，请添加房间"
        android:textColor="@color/gray_88"
        android:textSize="14sp"
        android:visibility="visible"/>

    <View
        android:id="@+id/view_line_add"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/gray_ee"/>

    <LinearLayout
        android:id="@+id/ll_add_room_item"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_room"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="添加房间"
            android:textColor="@color/blue_3e7"
            android:textSize="17sp"/>
    </LinearLayout>


</LinearLayout>