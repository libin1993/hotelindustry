<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_no_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:textColor="@color/gray_22"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/ic_next"/>


    <TextView
        android:id="@+id/tv_no_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@id/iv_next"
        android:text="暂无设备"
        android:textColor="@color/gray_88"
        android:textSize="14sp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_room_status"
        android:layout_width="37dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@id/iv_next"
        android:background="@drawable/bound_6e9_2dp"
        android:gravity="center"
        android:text="正常"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_code_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/tv_room_status"
        android:textColor="@color/gray_22"
        android:textSize="14sp"
        android:visibility="gone"/>


</RelativeLayout>