<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/esm_community"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    app:contentView="@+id/tv_building_unit"
    app:rightMenuView="@+id/ll_community">


    <TextView
        android:id="@+id/tv_building_unit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray_33"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/ll_community"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_unit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/gray_cc"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_delete_unit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/red_e93"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>


</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>